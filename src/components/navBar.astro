---
const LINKS = [
  {
    href: '/#experiencia',
    title: 'Experiencia'
  },
  {
    href: '/#proyectos',
    title: 'Proyectos'
  },
  {
    href: '/#sobre-mi',
    title: 'Sobre m√≠'
  },
  {
    href: '/mailto:daniel.barrera02121@hotmail.com',
    title: 'Contacto'
  }
]
---

<header id="NavBar" class="py-5 sticky inset-0 z-10">
  <nav>
    <ul class="flex gap-4 justify-center">
      {
        LINKS.map((link) => (
          <li>
            <a
              class="hover:font-semibold relative group transition-all text-neutral-800"
              title={link.title}
              href={link.href}
            >
              {link.title}
              <div class="absolute w-full h-0.5 bg-neutral-800 scale-x-0 group-hover:scale-x-100 transition-transform" />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  a::before {
    display: block;
    content: attr(title);
    font-weight: bold;
    height: 0;
    overflow: hidden;
  }
  .blur-css {
    backdrop-filter: blur(5px);
  }
</style>

<script>
  const $NavBar = document.getElementById('NavBar')
  let isScrolled = false

  function handleScroll() {
    if (window.scrollY > 50 && !isScrolled) {
      $NavBar?.classList.add('backdrop-blur', 'bg-white', 'bg-opacity-60')
      isScrolled = true
    } else if (window.scrollY <= 50 && isScrolled) {
      console.log('Scroll')
      $NavBar?.classList.remove('backdrop-blur', 'bg-white', 'bg-opacity-60')
      isScrolled = false
    }
  }

  window.addEventListener('scroll', handleScroll, { passive: true })
</script>
